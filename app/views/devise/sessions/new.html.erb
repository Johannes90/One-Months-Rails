<h2>Log in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' },
                    wrapper: :horizontal_form, wrapper_mappings: {radio_buttons: :horizontal_radio_and_checkboxes}) do |f| %>
    <%= f.error_notification %>


    <%= f.input :email, :input_html => {:style=> 'width: 250px'} %>
    <%= f.input :password, :input_html => {:style=> 'width: 250px'} %>
    <%= f.input :remember_me, as: :radio_buttons %>


    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.button :submit, 'Sign in', class: 'btn btn-primary' %>
        <p></p>
        <%= render 'devise/shared/links' %>
      </div>
    </div>

<% end %>
