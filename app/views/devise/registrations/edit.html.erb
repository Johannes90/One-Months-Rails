<h2>Edit Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
                    wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>

    <div class='form-inputs'>
      <%= f.input :first_name, required: true, :input_html => {:style=> 'width: 250px'}%>
      <%= f.input :last_name, required: true, :input_html => {:style=> 'width: 250px'}%>
      <%= f.input :email, required: true, autofocus: true , :input_html => {:style=> 'width: 250px'}%>
      <%= f.input :password, label: 'New Password', autocomplete: 'off', required: true, :input_html => {:style=> 'width: 250px'}  %>
      <%= f.input :password_confirmation, label: 'New Password Confirmation', autocomplete: 'off', required: true, :input_html => {:style=> 'width: 250px'} %>
      <%= f.input :current_password, required: true, :input_html => {:style=> 'width: 250px'} %>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <%= f.button :submit, 'Update Profile', class: 'btn btn-primary' %>
            <p></p>
            <%= render 'devise/shared/links' %>
         </div>
     </div>

<% end %>


