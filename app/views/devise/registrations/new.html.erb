<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' },
                    wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>


        <%= f.input :first_name, required: true, :input_html => {:style=> 'width: 250px'}%>
        <%= f.input :last_name, required: true, :input_html => {:style=> 'width: 250px'}%>
        <%= f.input :email, required: true, autofocus: true, :input_html => {:style=> 'width: 250px'} %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), :input_html => {:style=> 'width: 250px'} %>
        <%= f.input :password_confirmation, required: true, :input_html => {:style=> 'width: 250px'}%>


    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.button :submit, 'Sign up', class: 'btn btn-primary' %>
        <p></p>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
<% end %>

